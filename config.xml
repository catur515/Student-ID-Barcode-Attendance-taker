<?xml version='1.0' encoding='utf-8'?>
<widget id="com.codeweb.Attendance" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Attendance</name>
    <description>
        Student ID Scanner for Attendance
    </description>
    <author email="" href="https://github.com/cweitat">
        cweitat
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/logo.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/logo.png" />
    </platform>
</widget>
